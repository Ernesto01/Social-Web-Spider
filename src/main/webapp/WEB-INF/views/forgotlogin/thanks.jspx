<div xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:form="http://www.springframework.org/tags/form" xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:spring="http://www.springframework.org/tags" version="2.0">
  <jsp:directive.page contentType="text/html;charset=UTF-8" />
  <jsp:output omit-xml-declaration="yes"/>
  <spring:message code="forgot_login_title" var="title" htmlEscape="false" />
  <util:panel id="title" title="${title}">
    <h3>Your login has been e-mailed to you. If you requested a new password, it has been included.</h3>
  </util:panel>
</div>